{
    "name": "cohesion",
    "displayName": "Cohesion",
    "description": "An extension to enable collaboration between developers.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.91.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onFileSystem:memfs",
        "onCommand:vstodo.helloWorld"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "cohesion-sidebar-view",
                    "title": "Cohesion",
                    "icon": "media/icon.svg"
                }
            ]
        },
        "views": {
            "cohesion-sidebar-view": [
                {
                    "type": "webview",
                    "id": "cohesion-sidebar",
                    "name": "Cohesion",
                    "icon": "media/icon.svg"
                }
            ]
        },
        "commands": [
            {
                "command": "cohesion.helloWorld",
                "category": "Cohesion",
                "title": "Hello World"
            },
            {
				"command": "memfs.workspaceInit",
				"title": "Setup Workspace",
				"category": "MemFS"
			},
			{
				"command": "memfs.init",
				"title": "Create Files",
				"category": "MemFS"
			},
			{
				"command": "memfs.reset",
				"title": "Delete Files",
				"category": "MemFS"
			},
			{
				"command": "memfs.deleteFile",
				"title": "Delete \"file.txt\"",
				"category": "MemFS"
			},
			{
				"command": "memfs.addFile",
				"title": "Add \"file.txt\"",
				"category": "MemFS"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "memfs.init",
					"when": "workbenchState == workspace"
				},
				{
					"command": "memfs.reset",
					"when": "workbenchState == workspace"
				},
				{
					"command": "memfs.deleteFile",
					"when": "workbenchState == workspace"
				},
				{
					"command": "memfs.addFile",
					"when": "workbenchState == workspace"
				},
				{
					"command": "memfs.workspaceInit",
					"when": "workbenchState != workspace"
				}
			]
		}        
    },
    "scripts": {
        "install:all": "npm install && cd webview-ui && npm install",
        "start:webview": "cd webview-ui && npm run start",
        "build:webview": "cd webview-ui && npm run build",
        "vscode:prepublish": "npm run package",
        "compile": "cd webview-ui && npm run build && cd .. && webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.91.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "^7.4.0",
        "@typescript-eslint/parser": "^7.4.0",
        "eslint": "^8.57.0",
        "typescript": "^5.3.3",
        "ts-loader": "^9.5.1",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4",
        "@vscode/test-cli": "^0.0.8",
        "@vscode/test-electron": "^2.3.9"
    }
}